<Window x:Class="MessagesSent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messages Sent"
        Height="420" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Enter messages sent for the day:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

        <Border Grid.Row="0" Grid.Column="1"
                BorderBrush="Gray" BorderThickness="1"
                Padding="10,4">
            <TextBlock x:Name="txtDayDisplay"
                       Text="Day 1"
                       FontWeight="SemiBold"/>
        </Border>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtInput"
                     Height="28"
                     VerticalContentAlignment="Center"
                     ToolTip="Enter a whole number from 0 to 10000."
                     TabIndex="0"/>

            <Button x:Name="btnEnter"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="14,6"
                    Content="_Enter"
                    IsDefault="True"
                    ToolTip="Save today’s number and move to the next day."
                    Click="btnEnter_Click"
                    TabIndex="1"/>

            <Button x:Name="btnReset"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Padding="14,6"
                    Content="_Reset"
                    ToolTip="Clear all entries and return to Day 1."
                    Click="btnReset_Click"
                    TabIndex="2"/>

            <Button x:Name="btnExit"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Padding="14,6"
                    Content="E_xit"
                    ToolTip="Close the application."
                    Click="btnExit_Click"
                    TabIndex="3"/>
        </Grid>

        <GroupBox Grid.Row="2" Grid.ColumnSpan="2"
                  Header="Entries"
                  Margin="0,0,0,10">
            <TextBox x:Name="txtLog"
                     Margin="8"
                     IsReadOnly="True"
                     Height="200"
                     VerticalScrollBarVisibility="Auto"
                     ToolTip="Shows each day’s entry."/>
        </GroupBox>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Average:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <Border Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10,4">
                <TextBlock x:Name="txtAverage"
                           Text=""
                           ToolTip="Shows the average after Day 7."/>
            </Border>
        </Grid>
    </Grid>
</Window>